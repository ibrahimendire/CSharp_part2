@{
}
<h1>Select Event To Delete</h1>

<form method="post">
    @foreach (var Devent in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <span>@Devent.Name</span>
                <input type="checkbox" name="eventIds" value="@Devent.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger">

</form>